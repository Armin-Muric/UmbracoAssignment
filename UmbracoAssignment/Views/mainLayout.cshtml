@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var keywordsList = Model.Value<IEnumerable<string>>("pageKeywords");
	var keywords = keywordsList != null ? string.Join(", ", keywordsList) : "";
    var pageTitle = !string.IsNullorEmpty(ViewBag.Title) ? "{ViewBag.Title} | Onatrix - Financial Solutions for Your Business" : "Onatrix - Financial Solutions for Your Business";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset= "UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/main.css">
	<title>@Model.Value("pageTitle")</title>
	<meta name="description" content="@Model.Value("pageDescription")">
	<meta name="keywords" content="@keywords">
    <title>@pageTitle</title>
</head>	
<body>
    <div class="wrapper">
        <header>
            <section class="topbar">
                <div class="container">
                    <div class="address">Klarabergsviadukten 90, 111 64 Stockholm</div>
                    <div class="socialmedia">
                        <a href="#"<i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#"<i class="fa-brands fa-x-twitter"></i></a>
                        <a href="#"<i class="fa-brands fa-linkedin-in"></i></a>
                        </ul>
                    </div>
                </div>
            </section>
            <div class="navbar">
                <div class="container">
                    <a class="logo" href="/">
                        <img src="/media/zzpf3mhg/onatrix-logotype.svg"
                    </a>
                    <nav>
                        <a class="nav-link" href="/about">About</a>
                        <a class="nav-link" href="/services">Services</a>
                        <a class="nav-link" href="/projects">Projects</a>
                        <a class="nav-link" href="/contact">Contact</a>
                    </nav>
                    <div class="search">
                        <i class="fa-regular fa-magnifying-glass"></i>
                    </div>
                </div>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>

        <footer>
            <div class="container">
                <p class="copyright">© Onatrix. All Rights Reserved.</p>
                <p class="credits">Credits to <a href="https://themeforest.net/user/themesflat/portfolio">Themesflat</a></p>
            </div>
        </footer>
    </div>
    <script src="/scripts/main.js"></script>
</body>
</html>